<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="418dp"
        android:layout_height="712dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="120dp"
            android:text="Введите количество корма"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/amount_of_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:paddingTop="100dp"
            android:hint="Корм в граммах"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/food_button"
            android:layout_width="305dp"
            android:layout_height="74dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/round_button3"
            android:gravity="center"

            android:onClick="AddFood"
            android:text="Добавить"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/BackFoodButton"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/round_button3"
            android:onClick="BackToDog_Food"
            android:text="Назад"
            android:textColor="@color/black"
            android:textSize="30dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>